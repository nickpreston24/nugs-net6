@model IndexModel
@inject IImageService imageService
@{
    var model = @Model;

    var all_images = imageService.GetAllImages();

    var pcc_images = all_images
        .Where(i => i.FilePath.Contains("/pccs/"))
        .ToList();

    var long_rifle_images = all_images
        .Where(local_image => local_image.FilePath.Contains("/long-rifles/"))
        .ToList();

    var recce_rifle_images = all_images
        .Where(image => image.FilePath.Contains("/recces/"))
        .ToList();


    var recce_card = new CarouselCardModel()
    {
        Title = "Recce Rifles",
        Description = "Click the button to start building one.",
        Images = @recce_rifle_images
    };
    
    var pcc_card = new CarouselCardModel()
    {
        Title = "Pistol Caliber Carbines (PCC)",
        Description = "Click the button to start building one.",
        Images = @pcc_images
    };
    
    var long_rifle_card = new CarouselCardModel()
    {
        Title = "Long Rifles",
        Description = "Click the button to start building one.",
        Images = @long_rifle_images
    };
}

